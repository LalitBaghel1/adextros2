<%- include('header') -%>
<section class="container-fluid join_usbg sign_bg">
	<div class="container">
		<div class="row sign_align_center">
			<div class="col-sm-4 col-md-5 col-lg-7">
				<div class="sign_logo">
					<a href="/">
						<img src="images/logo.png">
					</a>
				</div>
			</div>
			<div class="col-sm-8 col-md-7 col-lg-5">
				<div class="signup_form">
					<h4>Sign up for free!</h4>
					<% if(typeof err != 'undefined'){ %>
						<div class="alert alert-danger" id="removeAlert" style="display: block;">
							<%= err %>
						  </div>
					<% } %>
					<form method="post" action="/signup">
						<ul>
							<li>
								<label>Enter Email</label>
								<input type="email" name="email">
							</li>
							<li>
								<label>Enter Full Name</label>
								<input type="text" name="FullName">
							</li>
							<li>
								<label>Enter Mobile Number</label>
								<input type="number" name="MobileNumber">
							</li>
							<li>
								<label>Enter Password</label>
								<input type="password" name="password">
							</li>
							<li>
								<label>Confirm Password</label>
								<input type="password" name="confirmPassword">
							</li>
							
							<li>
								<input type="submit" name="submit" value="Create Account">
							</li>
						</ul>
					</form>
					<p class="sign_btn"><a href="/login">Already have an account?</a></p>
				</div>
			</div>	
		</div>
	</div>
	<!-- for img -->
	<div class="join_us_img">
		<img src="images/signup_bg.jpg">
	</div>

</section>

<script>

	setTimeout(removeAlert, 2000);
	function removeAlert(){
		document.getElementById("removeAlert").innerHTML = " ";
		document.getElementById("removeAlert").style.display = "none";
	}
</script>
</body>
</html>